{
    "routes": [
        {
            "route": "/control.html",
            "allowedRoles": ["administrator"]
        },
        {
            "route": "/login",
            "rewrite": "/.auth/login/google"
        },
        {
            "route": "/.auth/login/*",
            "statusCode": 404
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/api/message",
            "allowedRoles": ["administrator"]
        },
        {
            "route": "/api/*",
            "allowedRoles": ["authenticated"]
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/login",
            "statusCode": 302
        }
    }
}
